{
  "manifest_version": 3,
  "name": "ChatFlow Navigator",
  "version": "1.5",
  "description": "Navigate long ChatGPT chats instantly with a floating sidebar that highlights and organizes your conversations.",
  "host_permissions": ["*://chatgpt.com/*"],
  "web_accessible_resources": [
    {
      "resources": ["js/sidebar.js", "css/sidebar.css"],
      "matches": ["*://chatgpt.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["*://chatgpt.com/*"],
      "js": ["content.js"],
      "css": ["css/sidebar.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}